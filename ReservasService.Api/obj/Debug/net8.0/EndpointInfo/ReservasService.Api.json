{
  "openapi": "3.0.4",
  "info": {
    "title": "ReservasService API",
    "description": "API del Microservicio de Reservas que gestiona la informaci√≥n de las reservas realizadas.",
    "version": "v1"
  },
  "paths": {
    "/api/Reservas/hold": {
      "post": {
        "tags": [
          "Reservas"
        ],
        "summary": "Crea un hold de reserva para una zona y cantidad de boletos.",
        "requestBody": {
          "description": "Datos de la reserva (evento, zona, usuario y cantidad de boletos).",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CrearReservaPorZonaRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CrearReservaPorZonaRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CrearReservaPorZonaRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ReservaHoldResponse"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ReservaHoldResponse"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ReservaHoldResponse"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/Reservas/{reservaId}": {
      "get": {
        "tags": [
          "Reservas"
        ],
        "summary": "Obtiene una reserva por su identificador.",
        "parameters": [
          {
            "name": "reservaId",
            "in": "path",
            "description": "ID de la reserva.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ReservaUsuarioDTO"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReservaUsuarioDTO"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReservaUsuarioDTO"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/Reservas/usuario/{usuarioId}": {
      "get": {
        "tags": [
          "Reservas"
        ],
        "summary": "Obtiene todas las reservas asociadas a un usuario.",
        "parameters": [
          {
            "name": "usuarioId",
            "in": "path",
            "description": "ID del usuario.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ReservaUsuarioDTO"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ReservaUsuarioDTO"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ReservaUsuarioDTO"
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/Reservas/{reservaId}/confirmar": {
      "post": {
        "tags": [
          "Reservas"
        ],
        "summary": "Confirma una reserva existente (cambia asientos a ocupados y marca la reserva como confirmada).",
        "parameters": [
          {
            "name": "reservaId",
            "in": "path",
            "description": "ID de la reserva a confirmar.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CrearReservaPorZonaRequest": {
        "type": "object",
        "properties": {
          "eventId": {
            "type": "string",
            "format": "uuid"
          },
          "zonaEventoId": {
            "type": "string",
            "format": "uuid"
          },
          "cantidadBoletos": {
            "type": "integer",
            "format": "int32"
          },
          "usuarioId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "ReservaAsientoDTO": {
        "type": "object",
        "properties": {
          "asientoId": {
            "type": "string",
            "format": "uuid"
          },
          "precioUnitario": {
            "type": "number",
            "format": "double"
          },
          "label": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ReservaHoldResponse": {
        "type": "object",
        "properties": {
          "reservaId": {
            "type": "string",
            "format": "uuid"
          },
          "asientoId": {
            "type": "string",
            "format": "uuid"
          },
          "expiraEn": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "ReservaUsuarioDTO": {
        "type": "object",
        "properties": {
          "reservaId": {
            "type": "string",
            "format": "uuid"
          },
          "eventId": {
            "type": "string",
            "format": "uuid"
          },
          "zonaEventoId": {
            "type": "string",
            "format": "uuid"
          },
          "usuarioId": {
            "type": "string",
            "format": "uuid"
          },
          "estado": {
            "type": "string",
            "nullable": true
          },
          "creadaEn": {
            "type": "string",
            "format": "date-time"
          },
          "expiraEn": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "precioTotal": {
            "type": "number",
            "format": "double"
          },
          "asientos": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ReservaAsientoDTO"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "tags": [
    {
      "name": "Reservas"
    }
  ]
}